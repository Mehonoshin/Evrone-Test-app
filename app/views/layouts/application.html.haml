!!! 5
%html{ html_attrs('ru') }
	%head
		%meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
		%title 
			= t('blog_app')
		= stylesheet_link_tag :all
		
		= javascript_include_tag "jquery.js"
		= javascript_include_tag "use.js"
		= csrf_meta_tag
		
	%body
		#wrapper
			%header#header
				%h1.header-link
					=link_to t('blog'), root_path
			%section#middle
				#container
					%p{ :class => "notice" }
						= notice
					%p{ :class => "alert" }
						= alert				
					#menu
						= link_to t('index'), root_path, :class => "tryitbtn"
						= link_to t('markup'), '/markup', :class => "tryitbtn"
						- if user_signed_in?
							= link_to t('add_post'), new_post_path, :class => "tryitbtn"
						= render :partial => "shared/authItems"
						= render :partial => "shared/registrationItems"
					#content
						= yield				
		%footer#footer
			#copyright
				%a{ 'href' => 'https://github.com/Mehonoshin/' }
					%strong